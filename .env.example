APPLE_JUICER_VERSION=0.1.0
APPLE_JUICER_ENVIRONMENT=development
APPLE_JUICER_API_TOKEN=dev-token

# Host path containing encrypted iOS backups (mounted read-only)
APPLE_JUICER_BACKUP_HOST_PATH=/home/g/ios_backup

# Host path where decrypted backups will be stored (read/write)
APPLE_JUICER_DECRYPTED_HOST_PATH=/home/g/ios_backup_decrypted

# Service bind addresses
APPLE_JUICER_BACKEND_HOST_IP=0.0.0.0
APPLE_JUICER_FRONTEND_HOST_IP=0.0.0.0
APPLE_JUICER_POSTGRES_HOST_IP=127.0.0.1
APPLE_JUICER_REDIS_HOST_IP=127.0.0.1

# Host ports exposed for each service
APPLE_JUICER_BACKEND_HOST_PORT=8080
APPLE_JUICER_FRONTEND_HOST_PORT=5173
APPLE_JUICER_POSTGRES_HOST_PORT=5432
APPLE_JUICER_REDIS_HOST_PORT=6379

# Database credentials
POSTGRES_USER=apple_juicer_user
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_DB=apple_juicer

# Redis credentials
REDIS_PASSWORD=change_me_in_production
